# AI Provider Configuration
# Choose your AI provider: anthropic, openai, azure, ollama
AI_PROVIDER=anthropic

# Anthropic Claude API Key
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# OpenAI API Key (if using OpenAI provider)
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-your-openai-key-here

# Azure OpenAI Configuration (if using Azure provider)
# AZURE_OPENAI_API_KEY=your-azure-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Ollama Configuration (if using Ollama - local inference)
# OLLAMA_BASE_URL=http://localhost:11434

# AI Model Configuration
# For Anthropic: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022, claude-3-opus-20240229
# For OpenAI: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
AI_MODEL=claude-3-5-sonnet-20241022

# Request Configuration
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TIMEOUT=120

# Privacy Settings
# Control what data is sent to the AI provider
PRIVACY_SEND_CLUSTER_METADATA=true
PRIVACY_SEND_RESOURCE_NAMES=true
PRIVACY_SEND_LOGS=false
PRIVACY_SEND_POD_NAMES=true

# Performance Settings
AI_STREAMING=true
AI_CACHING=true
CACHE_TTL=300

# Cost Management
# Set monthly spending limit in USD (optional)
# COST_MONTHLY_LIMIT=100
COST_ALERTS=true
