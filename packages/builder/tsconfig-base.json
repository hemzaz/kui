{
  "include": [],
  "exclude": ["**/flycheck*.ts"],
  "compilerOptions": {
    "removeComments": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2022",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext", "dom.iterable", "scripthost"],
    "typeRoots": ["../../@types", "../../node_modules/@types"],
    "jsx": "react"
  }
}
